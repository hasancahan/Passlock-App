{
  "name": "hd-passlock",
  "version": "1.0.0",
  "description": "Güvenli şifre yöneticisi uygulaması",
  "main": "main.js",
  "icon": "assets/icon.ico",
  "scripts": {
    "start": "npx electron .",
    "dev": "npx electron . --dev",
    "init-db": "node database/init-db.js",
    "build": "npx electron-builder",
    "pack": "npx electron-builder --dir",
    "dist": "npx electron-builder"
  },
  "keywords": [
    "password",
    "manager",
    "security",
    "electron"
  ],
  "author": "HD Passlock Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0"
  },
  "build": {
    "appId": "com.hdpasslock.app",
    "productName": "HD Passlock",
    "directories": {
      "output": "dist"
    },
    "icon": "assets/icon.ico",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "database/**/*",
      "node_modules/**/*",
      "package.json",
      "README.txt",
      "installer.nsh"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HD Passlock",
      "installerIcon": "assets/installer.ico",
      "uninstallerIcon": "assets/uninstaller.ico",
      "installerHeaderIcon": "assets/header.ico",
      "artifactName": "HD Passlock Setup ${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "warningsAsErrors": false,
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": "HD Passlock",
      "include": "installer.nsh"
    }
  }
}
